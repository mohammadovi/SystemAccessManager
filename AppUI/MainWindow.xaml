<Window x:Class="AppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="OutputTextBlock" Text="Choose your option:" Margin="0,0,0,10" />
            <Button Content="Choose custom settings" Click="CustomSettings_Click" Margin="0,0,0,10"/>
            <Button Content="Use predefined settings" Click="PredefinedSettings_Click" Margin="0,0,0,10"/>
            <Button Content="Exit" Click="Exit_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
